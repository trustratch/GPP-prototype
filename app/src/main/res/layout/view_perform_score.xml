<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="te" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <com.example.trust.reportbutton.EkoEvaluationButton
            android:id="@+id/evaluation_button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <com.example.trust.reportbutton.EkoEvaluationButton
            android:id="@+id/evaluation_button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <com.example.trust.reportbutton.EkoEvaluationButton
            android:id="@+id/evaluation_button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <com.example.trust.reportbutton.EkoEvaluationButton
            android:id="@+id/evaluation_button_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <com.example.trust.reportbutton.EkoEvaluationButton
            android:id="@+id/evaluation_button_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <com.example.trust.reportbutton.EkoEvaluationButton
            android:id="@+id/evaluation_button_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/evaluation_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_dark_bg"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" />

</LinearLayout>