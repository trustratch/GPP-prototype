<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_parent_view"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp">

        <RelativeLayout
            android:id="@+id/card_image_container"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/card_image_imageview"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/photographer" />

            <RelativeLayout
                android:id="@+id/card_image_mask"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/dark_translucent" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:text="Pass Go"
                android:id="@+id/card_image_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias voluptatum"
                android:textColor="@color/item_bg"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingTop="15dp"
                android:id="@+id/card_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatButton
                    android:textColor="@color/colorAccent"
                    android:text="start"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatButton
                    android:textColor="@color/colorAccent"
                    android:text="tutorial"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>